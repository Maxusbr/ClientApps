<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Map="clr-namespace:DTCDev.Client.Controls.Map;assembly=DTCDev.Client.Controls.Map"
             xmlns:Models="clr-namespace:DTCDev.Client.Cars.Controls.Models"
             xmlns:local="clr-namespace:DTCDev.Client.Cars.Controls.Controls.Map" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
             x:Class="DTCDev.Client.Cars.Controls.Controls.Car.CarDetailsView" 
             mc:Ignorable="d" 
             Height="220" d:DesignWidth="600">
    <Grid Background="White">
        <TabControl Margin="5">
            <TabItem Header="Текущие показатели">
                <Grid Margin="10,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"></RowDefinition>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="txtDate" FontWeight="Bold" Grid.ColumnSpan="4" TextAlignment="Center"/>
                    <Grid Grid.Row="1" Margin="10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="21"/>
                            <RowDefinition Height="21"/>
                            <RowDefinition Height="21"/>
                            <RowDefinition Height="21"/>
                            <RowDefinition Height="21"/>
                            <RowDefinition Height="21"/>
                            <RowDefinition Height="21"/>
                        </Grid.RowDefinitions>
                         <TextBlock Text="Скорость" />
                        <TextBlock x:Name="txtSpeed" Grid.Column="1"/>
                        <TextBlock Text="Кол-во спутников" Grid.Row="1"/>
                        <TextBlock x:Name="txtSat" Grid.Column="1" Grid.Row="1"/>
                        <TextBlock Text="Уровень топлива" Grid.Row="2"/>
                        <TextBlock x:Name="txtFuel" Grid.Column="1" Grid.Row="2"/>
                    </Grid>
                    <ScrollViewer Margin="20,0,0,0" Grid.Column="1" Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Grid.Column="1" x:Name="stkOBD"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Настройки">
                <Grid>

                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="btnClose" Height="16" Width="20" Margin="0,5,5,0" Click="btnClose_Click" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Grid>
                <Border Width="2" Height="10" BorderBrush="#FF00CCFF" Background="#FF00CCFF" RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="45"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>

                </Border>
                <Border Width="2" Height="10" BorderBrush="#FF00CCFF" Background="#FF00CCFF" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" >
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-45"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>

                </Border>
            </Grid>
        </Button>
    </Grid>
</UserControl>
