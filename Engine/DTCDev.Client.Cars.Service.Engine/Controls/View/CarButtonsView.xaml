<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewModels="clr-namespace:DTCDev.Client.Cars.Service.Engine.Controls.ViewModels" x:Class="DTCDev.Client.Cars.Service.Engine.Controls.View.CarButtonsView" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <ViewModels:CarButtonsViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <Button Content="Добавить работу" VerticalAlignment="Top" Padding="5,1" Margin="10" 
                Command="{Binding AddWorkCommand, Mode=OneWay}" IsEnabled="{Binding IsSelectedCar}"/>
		<Button Content="Просмотр истории" VerticalAlignment="Top" Padding="5,1" Margin="10" 
                Command="{Binding ShowHistoryCommand, Mode=OneWay}" IsEnabled="{Binding IsSelectedCar}"/>
	</StackPanel>
</UserControl>
